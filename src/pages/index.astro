---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);
---

<Layout>
  <h1 class="text-2xl font-bold text-gray-900 mb-8">記事一覧</h1>

  {posts.length === 0 && (
    <p class="text-gray-500">まだ記事がありません。</p>
  )}

  <ul class="space-y-6">
    {posts.map((post) => (
      <li>
        <a href={`/blog/${post.id}`} class="block group">
          <article class="border border-gray-200 rounded-lg p-5 bg-white hover:border-gray-300 transition-colors">
            <time class="text-sm text-gray-400" datetime={post.data.date.toISOString()}>
              {post.data.date.toLocaleDateString('ja-JP', { year: 'numeric', month: 'long', day: 'numeric' })}
            </time>
            <h2 class="text-lg font-semibold text-gray-900 mt-1 group-hover:text-blue-600 transition-colors">
              {post.data.title}
            </h2>
            <p class="text-sm text-gray-600 mt-2 leading-relaxed">
              {post.data.summary}
            </p>
          </article>
        </a>
      </li>
    ))}
  </ul>
</Layout>
